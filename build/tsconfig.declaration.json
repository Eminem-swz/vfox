{
  "compilerOptions": {
    "target": "es2018",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "../es",
  },
  "files": ["../src/index.ts"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
